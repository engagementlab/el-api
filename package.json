{
  "name": "el-api",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:quick": "npm run bootstrap -- --scope=@engagementlab/*",
    "dev": "nodemon ./packages/init/app.js",
    "start": "node ./packages/init/app.js",
